<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/row_card_view"
    android:id="@+id/row">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:padding="@dimen/list_row_padding">
        
        <ImageView android:id="@+id/image"
            android:layout_width="@dimen/book_image_width"
            android:layout_height="@dimen/book_image_height"
            android:paddingRight="@dimen/image_padding"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            style="@style/house_title"
            android:layout_toRightOf="@id/image"/>

        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:layout_toRightOf="@id/image"
            android:layout_below="@id/title"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
